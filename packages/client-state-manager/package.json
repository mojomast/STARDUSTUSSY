{
  "name": "@harmonyflow/client-state-manager",
  "version": "1.0.0",
  "description": "Client State Manager library for HarmonyFlow SyncBridge wellness platform - Performance Optimized",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./handoff": {
      "import": "./dist/handoff.esm.js",
      "require": "./dist/handoff.cjs.js",
      "types": "./dist/handoff/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters.esm.js",
      "require": "./dist/adapters.cjs.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "build:dev": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node tests/performance/benchmark.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "analyze": "npm run build && npm run analyze:size",
    "analyze:size": "node scripts/analyze-bundle.js"
  },
  "keywords": [
    "state-manager",
    "websocket",
    "sync",
    "harmonyflow",
    "redux",
    "mobx",
    "performance",
    "delta-compression"
  ],
  "author": "HarmonyFlow Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "jest": "^29.7.0",
    "msw": "^2.1.5",
    "rollup": "^4.9.6",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "mobx": ">=6.0.0",
    "redux": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "redux": {
      "optional": true
    },
    "mobx": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
