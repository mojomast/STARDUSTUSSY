{
  "name": "@harmonyflow/tests",
  "version": "1.0.0",
  "description": "HarmonyFlow SyncBridge Testing Framework",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:api",
    "test:unit": "jest --config jest.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js --testPathPattern=integration/",
    "test:api": "jest --config jest.api.config.js --testPathPattern=api/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "k6 run load/websocket-load.js && k6 run load/api-load.js",
    "test:load:ws": "k6 run load/websocket-load.js",
    "test:load:api": "k6 run load/api-load.js",
    "test:perf": "k6 run performance/benchmarks.js",
    "test:infrastructure": "jest --config jest.infra.config.js --testPathPattern=infrastructure/",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "report:merge": "npx playwright merge-reports --reporter html reports/playwright-report",
    "coverage:report": "npx nyc report --reporter=html --reporter=text",
    "pretest": "npm run lint"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "axios": "^1.6.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/k6": "^0.48.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
