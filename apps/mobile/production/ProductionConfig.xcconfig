// Production Configuration for iOS App
// HarmonyFlow SyncBridge Mobile

// API Configuration
API_BASE_URL = https://api.harmonyflow.io
API_WEBSOCKET_URL = wss://ws.harmonyflow.io
API_TIMEOUT = 30

// Environment
ENVIRONMENT = production
DEBUG_MODE = NO
ANALYTICS_ENABLED = YES
MONITORING_ENABLED = YES

// Authentication
AUTH_TOKEN_REFRESH_INTERVAL = 300
AUTH_TOKEN_LEEWAY = 10
AUTH_MAX_RETRIES = 3

// Session Configuration
SESSION_TTL = 604800000
SESSION_CHECKPOINT_INTERVAL = 30000
SESSION_MAX_RETRIES = 3

// WebSocket Configuration
WS_PING_INTERVAL = 30
WS_PONG_TIMEOUT = 60
WS_RECONNECT_INTERVAL = 5
WS_MAX_RECONNECT_ATTEMPTS = 10

// Feature Flags
FEATURE_OFFLINE_MODE = YES
FEATURE_PUSH_NOTIFICATIONS = YES
FEATURE_BIOMETRICS = YES
FEATURE_MULTI_DEVICE = YES
FEATURE_COLLABORATION = YES

// Performance Configuration
PERFORMANCE_LAZY_LOAD = YES
PERFORMANCE_PREFETCH = YES
PERFORMANCE_CACHE_STRATEGY = aggressive
PERFORMANCE_IMAGE_OPTIMIZATION = YES

// Monitoring
SENTRY_DSN = $(SENTRY_DSN_PRODUCTION)
DATADOG_API_KEY = $(DATADOG_API_KEY_PRODUCTION)
ERROR_REPORTING = YES
PERFORMANCE_TRACKING = YES

// Push Notifications
PUSH_NOTIFICATIONS_ENABLED = YES
PUSH_ENVIRONMENT = production

// App Store Configuration
APP_STORE_ID = com.harmonyflow.syncbridge
APP_STORE_VERSION = 1.0.0
APP_STORE_BUILD_NUMBER = 1

// Bundle Configuration
BUNDLE_ID = com.harmonyflow.syncbridge
BUNDLE_DISPLAY_NAME = HarmonyFlow
BUNDLE_VERSION = 1.0.0
BUNDLE_SHORT_VERSION = 1.0.0

// Deep Linking
DEEP_LINK_SCHEME = harmonyflow
DEEP_LINK_HOST = open
UNIVERSAL_LINKS_ENABLED = YES
UNIVERSAL_LINKS_DOMAINS = harmonyflow.io, www.harmonyflow.io

// Security
SECURITY_SSL_PINNING = YES
SECURITY_CERTIFICATE_PINNING = YES
SECURITY_KEYCHAIN_ACCESS_GROUP = $(AppIdentifierPrefix)com.harmonyflow.syncbridge

// Storage
CLOUD_SYNC_ENABLED = YES
CLOUD_BACKUP_ENABLED = YES
LOCAL_STORAGE_ENCRYPTION = YES

// Build Configuration
CODE_SIGNING_REQUIRED = YES
CODE_SIGN_ENTITLEMENTS = HarmonyFlow/production/HarmonyFlow.entitlements
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM_ID)
PROVISIONING_PROFILE_SPECIFIER = match AppStore com.harmonyflow.syncbridge

// Architecture
ARCHS = arm64
VALID_ARCHS = arm64
IPHONEOS_DEPLOYMENT_TARGET = 14.0
TARGETED_DEVICE_FAMILY = 1,2

// Bitcode
ENABLE_BITCODE = NO

// Optimization
GCC_OPTIMIZATION_LEVEL = s
SWIFT_OPTIMIZATION_LEVEL = -O

// Stripping
COPY_PHASE_STRIP = YES
STRIP_INSTALLED_PRODUCT = YES
STRIP_STYLE = all

// Warnings
GCC_WARN_UNUSED_VARIABLE = YES
SWIFT_WARN_UNUSED_VARIABLE = YES
GCC_TREAT_WARNINGS_AS_ERRORS = NO
SWIFT_TREAT_WARNINGS_AS_ERRORS = NO
